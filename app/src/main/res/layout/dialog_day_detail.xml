<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_card_stroke"
    app:cardBackgroundColor="@color/glass_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- En-tête -->
        <TextView
            android:id="@+id/dateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activités du Jour"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/glass_text_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- ScrollView pour les 24 heures -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/hoursLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <!-- Bouton Sauvegarder -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauvegarder"
            android:textSize="16sp"
            app:backgroundTint="@color/glass_accent_blue"
            android:textColor="@color/glass_text_primary"
            app:cornerRadius="16dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>