<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_card_stroke"
    app:cardBackgroundColor="@color/glass_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Trophy/Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/star_big_on"
            android:contentDescription="Success"
            app:tint="@color/glass_accent_amber" />

        <!-- Congratulations Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/glass_accent_green"
            android:layout_marginTop="16dp"/>

        <!-- Success message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You solved the puzzle!"
            android:textSize="16sp"
            android:textColor="@color/glass_text_secondary"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/glass_text_primary"
            app:backgroundTint="@color/glass_accent_green"
            app:cornerRadius="16dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
