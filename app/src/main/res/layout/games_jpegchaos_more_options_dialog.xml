<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_card_stroke"
    app:cardBackgroundColor="@color/glass_dialog_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Reset Button -->
        <LinearLayout
            android:id="@+id/btn_reset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_glass_input"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Reset"
                app:tint="@color/glass_error" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset"
                android:textSize="16sp"
                android:textColor="@color/glass_text_primary"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <!-- Toggle Sound Button -->
        <LinearLayout
            android:id="@+id/btn_toggle_sound"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_glass_input"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/icon_sound"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:contentDescription="Sound"
                app:tint="@color/glass_accent_green"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sound"
                android:textSize="16sp"
                android:textColor="@color/glass_text_primary"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <!-- Toggle Music Button -->
        <LinearLayout
            android:id="@+id/btn_toggle_music"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_glass_input"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/icon_music"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="Music"
                app:tint="@color/glass_accent_blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Music"
                android:textSize="16sp"
                android:textColor="@color/glass_text_primary"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
