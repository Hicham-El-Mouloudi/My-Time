<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_glass_primary"
    android:padding="24dp"
    tools:context="com.ensao.mytime.home.view.SettingsFragment">

    <!-- Title with Glass Styling -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_invocation_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/glass_text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Morning Section -->
    <TextView
        android:id="@+id/morning_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/settings_morning_label"
        android:textSize="18sp"
        android:textColor="@color/glass_accent_amber"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_morning_start"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="@string/settings_morning_start_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="@color/glass_text_primary"
        android:textColorHint="@color/glass_text_hint"
        android:background="@drawable/bg_glass_input"
        app:layout_constraintTop_toBottomOf="@id/morning_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edit_morning_end"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="@string/settings_morning_end_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="@color/glass_text_primary"
        android:textColorHint="@color/glass_text_hint"
        android:background="@drawable/bg_glass_input"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/edit_morning_start"
        app:layout_constraintStart_toEndOf="@id/edit_morning_start" />

    <!-- Evening Section -->
    <TextView
        android:id="@+id/evening_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/settings_evening_label"
        android:textSize="18sp"
        android:textColor="@color/glass_accent_purple"
        app:layout_constraintTop_toBottomOf="@id/edit_morning_start"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_evening_start"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="@string/settings_evening_start_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="@color/glass_text_primary"
        android:textColorHint="@color/glass_text_hint"
        android:background="@drawable/bg_glass_input"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/evening_title"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_evening_end"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="@string/settings_evening_end_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="@color/glass_text_primary"
        android:textColorHint="@color/glass_text_hint"
        android:background="@drawable/bg_glass_input"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/edit_evening_start"
        app:layout_constraintStart_toEndOf="@id/edit_evening_start" />

    <!-- Save Button with Glass Accent -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:backgroundTint="@color/glass_accent_blue"
        android:textColor="@color/glass_text_primary"
        android:text="@string/settings_save_button"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_evening_start" />

</androidx.constraintlayout.widget.ConstraintLayout>