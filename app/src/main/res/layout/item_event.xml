<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_card_stroke"
    app:cardBackgroundColor="@color/glass_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/event_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/glass_accent_blue" />

            <EditText
                android:id="@+id/event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Titre de l'événement"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/glass_text_primary"
                android:textColorHint="@color/glass_text_hint"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btn_delete_event"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="×"
                android:textSize="18sp"
                android:textColor="@color/glass_error"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <EditText
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de l'événement"
            android:textSize="14sp"
            android:textColor="@color/glass_text_secondary"
            android:textColorHint="@color/glass_text_hint"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginStart="88dp"
            android:minHeight="40dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>