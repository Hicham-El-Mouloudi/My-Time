<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_glass_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Timer Container with Glass Styling -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Circular Timer -->
                <FrameLayout
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_marginBottom="32dp">

                    <!-- Progress Bar Track -->
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circular_progress_track"
                        android:rotation="-90"
                        style="?android:attr/progressBarStyleHorizontal" />

                    <!-- Actual Progress -->
                    <ProgressBar
                        android:id="@+id/progress_timer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="75"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:rotation="-90"
                        style="?android:attr/progressBarStyleHorizontal" />

                    <!-- Digital Clock Center -->
                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="25:00"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="@color/glass_text_primary"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.05"/>

                </FrameLayout>

                <!-- Duration Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_25_min"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="25 min"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_button_secondary"
                        app:strokeColor="@color/glass_card_stroke"
                        app:strokeWidth="1dp"
                        app:cornerRadius="16dp"
                        android:layout_marginEnd="8dp"
                        android:stateListAnimator="@null"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_45_min"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="45 min"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_button_secondary"
                        app:strokeColor="@color/glass_card_stroke"
                        app:strokeWidth="1dp"
                        app:cornerRadius="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:stateListAnimator="@null"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_custom"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Custom"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_button_secondary"
                        app:strokeColor="@color/glass_card_stroke"
                        app:strokeWidth="1dp"
                        app:cornerRadius="16dp"
                        android:layout_marginStart="8dp"
                        android:stateListAnimator="@null"/>

                </LinearLayout>

                <!-- Timer Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Start"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_accent_blue"
                        app:cornerRadius="20dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pause"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Pause"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_warning"
                        app:cornerRadius="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_stop"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Stop"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_error"
                        app:cornerRadius="20dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Subjects Container with Glass Styling -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subjects_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subjects to Study"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/et_subject_name"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:hint="Subject name"
                        android:textSize="16sp"
                        android:textColor="@color/glass_text_primary"
                        android:textColorHint="@color/glass_text_hint"
                        android:background="@drawable/bg_glass_input"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Add"
                        android:textSize="16sp"
                        android:textColor="@color/glass_text_primary"
                        app:backgroundTint="@color/glass_button_secondary"
                        app:strokeColor="@color/glass_card_stroke"
                        app:strokeWidth="1dp"
                        app:cornerRadius="16dp"
                        android:stateListAnimator="@null"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_subjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>