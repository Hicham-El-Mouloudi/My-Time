<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_glass_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context="home.view.HomeFragment">

        <!-- App Title -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.2"
            android:text="AURORA"
            android:textColor="@color/glass_text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="#4060A5FA"
            android:shadowRadius="20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Main Glass Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_glass_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Clock + Date Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/clock_date_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/glass_card_stroke"
                    app:cardBackgroundColor="@color/glass_card_bg_light">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <com.ensao.mytime.home.view.AnalogClockView
                            android:id="@+id/analog_clock"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:theme="@style/ThemeOverlay.MaterialComponents.Dark" />

                        <TextView
                            android:id="@+id/gregorian_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/glass_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="Wednesday 27 December" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quote Section -->
                <LinearLayout
                    android:id="@+id/quote_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/quote_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:textColor="@color/glass_text_primary"
                        android:lineSpacingExtra="4dp"
                        tools:text="La citation chargée de l'API s'affiche ici." />

                    <TextView
                        android:id="@+id/quote_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_secondary"
                        android:layout_gravity="end"
                        tools:text="— Auteur" />

                </LinearLayout>

                <!-- Invocation Button -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_invocations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="14dp"
                        android:text="Invocations"
                        android:textSize="16sp"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/glass_text_primary"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/glass_button_secondary"
                        app:strokeColor="@color/glass_card_stroke"
                        app:strokeWidth="1dp"
                        app:elevation="0dp"
                        android:stateListAnimator="@null"/>

                    <TextView
                        android:id="@+id/invocation_badge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/invocation_badge_drawable"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </FrameLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>