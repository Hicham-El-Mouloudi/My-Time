<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/sleep_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sleep Optimization"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/glass_text_primary"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Merged Sleep Schedule Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sleep_schedule"
            style="@style/GlassCardStyle.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/sleep_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Schedule"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary"
                    android:layout_marginBottom="24dp" />

                <!-- 1. Wake Up Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I want to wake up at"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_wake_up_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/bg_glass_input"
                        android:gravity="center"
                        android:textSize="36sp"
                        android:textColor="@color/glass_accent_blue"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        tools:text="07:00" />
                </LinearLayout>

                <!-- 2. Suggestions -->
                <TextView
                    android:id="@+id/tv_suggested_sleep_times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_glass_card_subtle"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/glass_text_secondary"
                    tools:text="Suggested cycles..." />

                <!-- 3. Sleep Target Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Bedtime"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_selected_sleep_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/bg_glass_input"
                        android:gravity="center"
                        android:textSize="36sp"
                        android:textColor="@color/glass_accent_purple"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        tools:text="22:30" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sleep Focus Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sleep_focus"
            style="@style/GlassCardStyle.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_sleep_schedule">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Focus"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Blocked Apps"
                        android:textSize="16sp"
                        android:textColor="@color/glass_text_primary"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_manage_blocked_apps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage"
                        android:textColor="@color/glass_accent_teal"
                        app:backgroundTint="@color/glass_card_bg_medium"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>

                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center_vertical">

                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="Auto Dark Mode"
                         android:textSize="16sp"
                         android:textColor="@color/glass_text_primary"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/glass_accent_blue"
                        app:trackTint="@color/glass_card_bg_medium" />
                 </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle_sleep_session"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Activate Night Session"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:textColor="@color/glass_text_primary"
            app:backgroundTint="@color/glass_accent_green"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/card_sleep_focus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>