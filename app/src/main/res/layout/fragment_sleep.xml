<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_glass_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Sleep Title with Glass Styling -->
        <TextView
            android:id="@+id/sleep_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸŒ™ Optimisation du Sommeil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/glass_text_primary"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Wake Up Goal Card - Glass Style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sleep_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg"
            app:layout_constraintTop_toBottomOf="@id/sleep_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Mon Objectif de RÃ©veil"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_accent_blue" />

                <TextView
                    android:id="@+id/tv_wake_up_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_glass_card"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/glass_text_primary"
                    android:textStyle="bold"
                    tools:text="07:00" />

                <TextView
                    android:id="@+id/tv_suggested_sleep_times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_glass_card"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/glass_text_secondary"
                    tools:text="Suggestions de cycles..." />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sleep Time Selection Card - Glass Style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sleep_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg"
            app:layout_constraintTop_toBottomOf="@id/card_sleep_calculator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Heure de Coucher SouhaitÃ©e"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_accent_purple" />

                <TextView
                    android:id="@+id/tv_selected_sleep_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary"
                    android:text="Heure choisie : 22:30" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_sleep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Modifier l'heure"
                    android:textColor="@color/glass_text_primary"
                    app:backgroundTint="@color/glass_card_bg_medium"
                    app:strokeColor="@color/glass_card_stroke"
                    app:strokeWidth="1dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preparation Card - Glass Style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_preparation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg"
            app:layout_constraintTop_toBottomOf="@id/card_sleep_target">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. PrÃ©paration (2h avant)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_accent_teal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_manage_blocked_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÃ©rer les apps bloquÃ©es"
                    android:textColor="@color/glass_text_secondary"
                    android:layout_marginTop="4dp"
                    style="@style/Widget.Material3.Button.TextButton" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mode Sombre auto"
                    android:textColor="@color/glass_text_primary"
                    app:thumbTint="@color/glass_accent_blue"
                    app:trackTint="@color/glass_card_bg_medium" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle Session Button - Glass Accent -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle_sleep_session"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Activer la Session Nuit"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/glass_text_primary"
            app:backgroundTint="@color/glass_accent_green"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_preparation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>