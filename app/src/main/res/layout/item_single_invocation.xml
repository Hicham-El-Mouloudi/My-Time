<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_card_stroke"
    app:cardBackgroundColor="@color/glass_card_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Invocation Text with Glass Text Color -->
        <TextView
            android:id="@+id/invocation_text_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/glass_text_primary"
            android:lineSpacingExtra="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/counter_container"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="[Texte de l'invocation ici]" />

        <FrameLayout
            android:id="@+id/counter_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Counter with Glass Accent -->
            <TextView
                android:id="@+id/invocation_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/glass_text_primary"
                android:background="@drawable/circle_background_glass_accent"
                tools:text="3" />

            <ImageButton
                android:id="@+id/btn_done_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background_glass_success"
                android:src="@drawable/ic_check_white"
                android:visibility="invisible"
                android:contentDescription="Invocation terminée" />

            <ImageButton
                android:id="@+id/btn_decrement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@null"
                android:contentDescription="Décrémenter le compteur" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>