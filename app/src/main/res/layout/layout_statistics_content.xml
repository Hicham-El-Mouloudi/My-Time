<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Container with Glass Styling -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stats_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardBackgroundColor="@color/glass_card_bg"
            android:layout_margin="16dp">

            <!-- Fixed Height Background Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/header_background_image"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:contentDescription="Header Background"
                android:scaleType="centerCrop"
                android:src="@drawable/sleepillustration"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <!-- Content Overlay -->
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="16dp"
               android:id="@+id/card_inner_layout"
               android:background="@android:color/transparent"> 

                <!-- Toggle Buttons (Reveil / Sommeil) with Glass Styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_glass_card"
                    android:padding="4dp"
                    android:layout_marginBottom="24dp">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_toggle_reveil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reveil"
                        app:backgroundTint="@color/glass_accent_blue"
                        android:textColor="@color/glass_text_primary"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_toggle_sommeil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sommeil"
                        app:backgroundTint="@android:color/transparent"
                        android:textColor="@color/glass_text_secondary"
                        app:elevation="0dp"
                        app:cornerRadius="12dp" />
                </LinearLayout>


            </LinearLayout>
     </com.google.android.material.card.MaterialCardView>

        <!-- Quality Percentage Arc Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-150dp">

            <!-- Background Chart (Static) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/qualityChartBackground"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <!-- Foreground Chart (Animated) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/qualityChart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </FrameLayout>

        <!-- Dynamic Stats Container -->
        <LinearLayout
            android:id="@+id/dynamic_stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
