<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Container with illustration background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stats_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- Fixed Height Background Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/header_background_image"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:contentDescription="Header Background"
                android:scaleType="centerCrop"
                android:src="@drawable/sleepillustration"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <!-- Content Overlay -->
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="16dp"
               android:id="@+id/card_inner_layout"
               android:background="@android:color/transparent"> 
               <!-- Removed background from here, moved to ImageView above -->

                <!-- Toggle Buttons (Reveil / Sommeil / Études) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_toggle_container"
                    android:padding="4dp"
                    android:layout_marginBottom="24dp">
                    
                    <Button
                        android:id="@+id/btn_toggle_reveil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reveil"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="?attr/materialButtonStyle"
                        app:cornerRadius="24dp" />

                    <Button
                        android:id="@+id/btn_toggle_sommeil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sommeil"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/text_secondary"
                        style="?attr/materialButtonStyle"
                        app:elevation="0dp"
                        app:cornerRadius="24dp" />

                    <Button
                        android:id="@+id/btn_toggle_etudes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Études"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/text_secondary"
                        style="?attr/materialButtonStyle"
                        app:elevation="0dp"
                        app:cornerRadius="24dp" />
                </LinearLayout>


            </LinearLayout>
     </androidx.cardview.widget.CardView>

        <!-- Quality Percentage Arc -->
        <!-- Quality Percentage Arc Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-150dp">

            <!-- Background Chart (Static) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/qualityChartBackground"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <!-- Foreground Chart (Animated) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/qualityChart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </FrameLayout>

        <!-- Dynamic Stats Container -->
        <LinearLayout
            android:id="@+id/dynamic_stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
