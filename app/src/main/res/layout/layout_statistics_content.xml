<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toggle Buttons (Reveil / Sommeil) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="@color/surface_color"
            android:padding="4dp"
            android:layout_marginBottom="24dp">
            <!-- Note: Using a simple background for now, ideally a segmented control -->

            <Button
                android:id="@+id/btn_toggle_reveil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reveil"
                android:backgroundTint="@color/primary_color"
                android:textColor="@color/white"
                style="?attr/materialButtonStyle" />

            <Button
                android:id="@+id/btn_toggle_sommeil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sommeil"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/text_secondary"
                style="?attr/materialButtonStyle"
                app:elevation="0dp" />
        </LinearLayout>

        <!-- Quality Percentage Arc -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/qualityChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <!-- Dynamic Stats Container -->
        <LinearLayout
            android:id="@+id/dynamic_stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
