<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toggle Buttons (Reveil / Sommeil) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="@color/surface_color"
            android:padding="4dp"
            android:layout_marginBottom="24dp">
            <!-- Note: Using a simple background for now, ideally a segmented control -->

            <Button
                android:id="@+id/btn_toggle_reveil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reveil"
                android:backgroundTint="@color/primary_color"
                android:textColor="@color/white"
                style="?attr/materialButtonStyle" />

            <Button
                android:id="@+id/btn_toggle_sommeil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sommeil"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/text_secondary"
                style="?attr/materialButtonStyle"
                app:elevation="0dp" />
        </LinearLayout>

        <!-- Quality Percentage Arc -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Placeholder for Circular Progress / Arc -->
            <ProgressBar
                android:id="@+id/pb_quality"
                android:layout_width="200dp"
                android:layout_height="200dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/ic_launcher_foreground" 
                android:progress="50"
                android:max="100"
                android:rotation="-90"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
                <!-- Note: Need a custom drawable for a true arc, using placeholder for now -->

            <TextView
                android:id="@+id/tv_quality_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toTopOf="@id/pb_quality"
                app:layout_constraintBottom_toBottomOf="@id/pb_quality"
                app:layout_constraintStart_toStartOf="@id/pb_quality"
                app:layout_constraintEnd_toEndOf="@id/pb_quality" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/tv_quality_percentage"
                app:layout_constraintStart_toStartOf="@id/pb_quality"
                app:layout_constraintEnd_toEndOf="@id/pb_quality" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Dynamic Stats Container -->
        <LinearLayout
            android:id="@+id/dynamic_stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
