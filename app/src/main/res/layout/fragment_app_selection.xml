<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_glass_primary">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Sélectionnez les applications à bloquer :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_save_selection"
        android:layout_below="@id/header_title"
        android:clipToPadding="false"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_save_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Enregistrer la sélection"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/glass_text_primary"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/glass_button_secondary"
        app:strokeColor="@color/glass_card_stroke"
        app:strokeWidth="1dp"
        app:elevation="0dp"
        android:padding="12dp"
        style="@style/Widget.Material3.Button" />

</RelativeLayout>