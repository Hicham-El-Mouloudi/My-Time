<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_glass">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/study_select_subject_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/glass_text_primary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_subjects"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/et_dialog_new_subject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="@string/study_subject_name_hint"
            android:background="@drawable/bg_glass_input"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/glass_text_primary"
            android:textColorHint="@color/glass_text_hint"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_add_subject"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/study_btn_add"
            android:textColor="@color/glass_text_primary"
            app:backgroundTint="@color/glass_button_secondary"
            app:cornerRadius="12dp"
            app:strokeColor="@color/glass_card_stroke"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_cancel"
        android:textColor="@color/glass_text_primary"
        app:backgroundTint="@color/glass_button_secondary"
        app:cornerRadius="12dp" />

</LinearLayout>
