<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@color/game_minesweeper_bg">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Flag Counter -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvMineCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/game_minesweeper_timer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLAGS"
                android:textSize="10sp"
                android:textColor="@color/game_minesweeper_accent"/>
        </LinearLayout>

        <!-- Flag/Reveal Mode Toggle -->
        <ImageButton
            android:id="@+id/btnToggleMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shovel"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:backgroundTint="@color/game_minesweeper_accent"
            android:layout_marginEnd="4dp"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Restart Button -->
        <ImageButton
            android:id="@+id/btnRestart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_face_smile"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:backgroundTint="@color/game_minesweeper_accent"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Timer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/game_minesweeper_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECONDS"
                android:textSize="10sp"
                android:textColor="@color/game_minesweeper_accent"/>
        </LinearLayout>

        <!-- Dark Mode Toggle -->
        <ImageButton
            android:id="@+id/btnDarkMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mode_dark"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:backgroundTint="@color/game_minesweeper_button"/>

    </LinearLayout>

    <!-- Game Board -->
    <com.ensao.mytime.games.minesweeper.MinesweeperView
        android:id="@+id/minesweeperView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"/>

</LinearLayout>
