<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_background"
    tools:context=".statistics.StatisticsFragment">

    <!-- Top Bar with Glass Styling -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar_container"
        style="@style/MainContainerStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Row: Selected Day + Calendar Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/tv_selected_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary" />

                <ImageView
                    android:id="@+id/btn_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/statistics_calendar"
                    android:padding="8dp"
                    app:tint="@color/glass_accent_blue"
                    android:contentDescription="Calendar" />
            </LinearLayout>

            <!-- Horizontal RecyclerView of Days -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="true"
                tools:listitem="@layout/item_week" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Container -->
    <FrameLayout
        android:id="@+id/content_of_the_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Content will be injected here (Empty or Record Available) -->
        
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
