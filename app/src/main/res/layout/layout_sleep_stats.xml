<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section Header: Diagnostic du sommeil -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnostic du sommeil"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp" />

    <!-- Row 1: Durée du sommeil + Temps passé au lit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Durée du sommeil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durée"
                    android:textSize="14sp"
                    android:textColor="@color/glass_text_secondary" />

                <TextView
                    android:id="@+id/tv_sleep_duration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary" />

                <TextView
                    android:id="@+id/tv_sleep_duration_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/glass_text_tertiary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Temps passé au lit -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temps au lit"
                    android:textSize="14sp"
                    android:textColor="@color/glass_text_secondary" />

                <TextView
                    android:id="@+id/tv_time_in_bed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary" />
                
                 <View
                    android:layout_width="1dp"
                    android:layout_height="18dp" 
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Row 2: Latence d'endormissement + Réveils nocturnes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Latence d'endormissement -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latence"
                    android:textSize="14sp"
                    android:textColor="@color/glass_text_secondary" />

                <TextView
                    android:id="@+id/tv_sleep_latency_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Réveils nocturnes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/glass_card_stroke"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Réveils"
                    android:textSize="14sp"
                    android:textColor="@color/glass_text_secondary" />

                <TextView
                    android:id="@+id/tv_wake_during_sleep_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Sleep Timeline Chart -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/glass_card_stroke"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/glass_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chronologie du sommeil"
                android:textSize="14sp"
                android:textColor="@color/glass_text_secondary"
                android:layout_marginBottom="12dp" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/chart_sleep_timeline"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:minHeight="180dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
