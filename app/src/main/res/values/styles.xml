<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour l'en-tête du calendrier (Mois/Année) -->
    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/calendar_header</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style pour les dates -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/calendar_date</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style pour les jours de la semaine -->
    <style name="CalendarWeekdayTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/calendar_weekday</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>