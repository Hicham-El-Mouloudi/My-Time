<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Clean Light Mode -->
    <style name="Base.Theme.MyTime" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors - Deep blue brand -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/light_on_primary_container</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/light_on_secondary_container</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/light_tertiary</item>
        <item name="colorOnTertiary">@color/light_on_tertiary</item>
        
        <!-- Background & Surface - Light clean surfaces -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Error -->
        <item name="colorError">@color/light_error</item>
        <item name="colorOnError">@color/light_on_error</item>
        
        <!-- Status Bar - Light with dark icons -->
        <item name="android:statusBarColor">@color/light_background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar - Light -->
        <item name="android:navigationBarColor">@color/light_nav_bg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Toolbar Style -->
        <item name="toolbarStyle">@style/LightToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/LightOverflowButtonStyle</item>
        
        <!-- Popup Menu Style -->
        <item name="popupMenuStyle">@style/LightPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/LightPopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/LightPopupMenuStyle</item>
        
        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/LightBottomNavigationStyle</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/LightCardStyle</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/LightButtonStyle</item>
    </style>

    <style name="Theme.MyTime" parent="Base.Theme.MyTime" />
    
    <!-- ========== LIGHT CARD STYLE ========== -->
    <style name="LightCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/light_card_bg</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <style name="LightCardStyle.Large">
        <item name="cardCornerRadius">24dp</item>
    </style>
    
    <!-- Alias for backwards compatibility with glass naming -->
    <style name="GlassCardStyle" parent="LightCardStyle" />
    <style name="GlassCardStyle.Large" parent="LightCardStyle.Large" />
    
    <!-- ========== LIGHT BUTTON STYLE ========== -->
    <style name="LightButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_primary</item>
        <item name="android:textColor">@color/light_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="LightButtonStyle.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/light_outline</item>
        <item name="android:textColor">@color/light_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="LightButtonStyle.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/light_primary</item>
    </style>
    
    <!-- Aliases for backwards compatibility -->
    <style name="GlassButtonStyle" parent="LightButtonStyle" />
    <style name="GlassButtonStyle.Outlined" parent="LightButtonStyle.Outlined" />
    <style name="GlassButtonStyle.Text" parent="LightButtonStyle.Text" />

    <!-- ========== DAY TOGGLE STYLES ========== -->
    <style name="DayToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/selector_day_toggle_text</item>
        <item name="android:background">@drawable/selector_day_toggle_background</item>
        <item name="background">@drawable/selector_day_toggle_background</item>
    </style>

    <!-- Weekend style with highlight -->
    <style name="DayToggleWeekend" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/selector_day_toggle_text_weekend</item>
        <item name="android:background">@drawable/selector_day_toggle_background_weekend</item>
        <item name="background">@drawable/selector_day_toggle_background_weekend</item>
    </style>
    
    <!-- ========== SUDOKU THEME (Light) ========== -->
    <style name="Base.Theme.Sudoku" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="android:colorBackground">@color/light_background</item>
    </style>

    <style name="Theme.Sudoku" parent="Base.Theme.Sudoku" />

    <style name="NumberButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/light_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- ========== LIGHT TEXT STYLES ========== -->
    <style name="LightTextStyle" parent="">
        <item name="android:textColor">@color/light_on_surface</item>
    </style>
    
    <style name="LightTextStyle.Title">
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="LightTextStyle.Subtitle">
        <item name="android:textColor">@color/light_on_surface_variant</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="LightTextStyle.Body">
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Aliases for backwards compatibility -->
    <style name="GlassTextStyle" parent="LightTextStyle" />
    <style name="GlassTextStyle.Title" parent="LightTextStyle.Title" />
    <style name="GlassTextStyle.Subtitle" parent="LightTextStyle.Subtitle" />
    <style name="GlassTextStyle.Body" parent="LightTextStyle.Body" />
    
    <!-- ========== LIGHT TOOLBAR STYLE ========== -->
    <style name="LightToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/light_surface</item>
        <item name="titleTextColor">@color/light_on_surface</item>
        <item name="subtitleTextColor">@color/light_on_surface_variant</item>
        <item name="navigationIconTint">@color/light_on_surface</item>
        <item name="titleTextAppearance">@style/LightToolbarTitleTextAppearance</item>
    </style>
    
    <style name="LightToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Aliases for backwards compatibility -->
    <style name="GlassToolbarStyle" parent="LightToolbarStyle" />
    <style name="GlassToolbarTitleTextAppearance" parent="LightToolbarTitleTextAppearance" />
    
    <!-- ========== LIGHT OVERFLOW BUTTON STYLE ========== -->
    <style name="LightOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/light_on_surface</item>
    </style>
    
    <!-- Alias for backwards compatibility -->
    <style name="GlassOverflowButtonStyle" parent="LightOverflowButtonStyle" />
    
    <!-- ========== LIGHT POPUP MENU STYLE ========== -->
    <style name="LightPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_light_popup_menu</item>
    </style>
    
    <!-- Alias for backwards compatibility -->
    <style name="GlassPopupMenuStyle" parent="LightPopupMenuStyle" />
    
    <!-- ========== LIGHT BOTTOM NAVIGATION STYLE ========== -->
    <style name="LightBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/light_nav_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="itemIconTint">@color/selector_light_nav_item</item>
        <item name="itemTextColor">@color/selector_light_nav_item</item>
        <item name="itemActiveIndicatorStyle">@style/LightBottomNavIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="LightBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_primary_container</item>
    </style>
    
    <!-- Aliases for backwards compatibility -->
    <style name="GlassBottomNavigationStyle" parent="LightBottomNavigationStyle" />
    <style name="GlassBottomNavIndicator" parent="LightBottomNavIndicator" />
    
    <!-- ========== LIGHT POPUP OVERLAY (for toolbar menus) ========== -->
    <style name="LightPopupOverlay" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorBackground">@color/light_surface</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
        <item name="popupMenuBackground">@drawable/bg_light_popup_menu</item>
    </style>
    
    <!-- Alias for backwards compatibility -->
    <style name="GlassPopupOverlay" parent="LightPopupOverlay" />
</resources>