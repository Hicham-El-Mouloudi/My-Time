<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Glassmorphism Dark -->
    <style name="Base.Theme.MyTime" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors - Using glass accent blue -->
        <item name="colorPrimary">@color/glass_accent_blue</item>
        <item name="colorOnPrimary">@color/glass_text_primary</item>
        <item name="colorPrimaryContainer">@color/glass_accent_indigo</item>
        <item name="colorOnPrimaryContainer">@color/glass_text_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/glass_accent_purple</item>
        <item name="colorOnSecondary">@color/glass_text_primary</item>
        <item name="colorSecondaryContainer">@color/glass_card_bg_medium</item>
        <item name="colorOnSecondaryContainer">@color/glass_text_primary</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/glass_accent_teal</item>
        <item name="colorOnTertiary">@color/glass_text_primary</item>
        
        <!-- Background & Surface - Always dark for glassmorphism -->
        <item name="android:colorBackground">@color/glass_bg_dark</item>
        <item name="colorSurface">@color/glass_bg_mid</item>
        <item name="colorSurfaceVariant">@color/glass_card_bg</item>
        <item name="colorOnSurface">@color/glass_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/glass_text_secondary</item>
        
        <!-- Error -->
        <item name="colorError">@color/glass_error</item>
        <item name="colorOnError">@color/glass_text_primary</item>
        
        <!-- Status Bar - Dark transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar - Dark -->
        <item name="android:navigationBarColor">@color/glass_nav_bg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Toolbar Style -->
        <item name="toolbarStyle">@style/GlassToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/GlassOverflowButtonStyle</item>
        
        <!-- Popup Menu Style -->
        <item name="popupMenuStyle">@style/GlassPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/GlassPopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/GlassPopupMenuStyle</item>
        
        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/GlassBottomNavigationStyle</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/GlassCardStyle</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/GlassButtonStyle</item>
    </style>

    <style name="Theme.MyTime" parent="Base.Theme.MyTime" />
    
    <!-- Glass Card Style -->
    <style name="GlassCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/glass_card_bg</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_card_stroke</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <style name="GlassCardStyle.Large">
        <item name="cardCornerRadius">24dp</item>
    </style>
    
    <!-- Glass Button Style -->
    <style name="GlassButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/glass_accent_blue</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="GlassButtonStyle.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/glass_card_stroke</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="GlassButtonStyle.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/glass_accent_blue</item>
    </style>
    
    <!-- ========== GLASS TOOLBAR STYLE ========== -->
    <style name="GlassToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/glass_card_bg</item>
        <item name="titleTextColor">@color/glass_text_primary</item>
        <item name="subtitleTextColor">@color/glass_text_secondary</item>
        <item name="navigationIconTint">@color/glass_icon_primary</item>
        <item name="titleTextAppearance">@style/GlassToolbarTitleTextAppearance</item>
    </style>
    
    <style name="GlassToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/glass_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- ========== GLASS OVERFLOW BUTTON STYLE ========== -->
    <style name="GlassOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/glass_icon_primary</item>
    </style>
    
    <!-- ========== GLASS POPUP MENU STYLE ========== -->
    <style name="GlassPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_glass_popup_menu</item>
    </style>
    
    <!-- ========== GLASS BOTTOM NAVIGATION STYLE ========== -->
    <style name="GlassBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/glass_nav_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="itemIconTint">@color/selector_glass_nav_item</item>
        <item name="itemTextColor">@color/selector_glass_nav_item</item>
        <item name="itemActiveIndicatorStyle">@style/GlassBottomNavIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="GlassBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/glass_card_bg_medium</item>
    </style>
    
    <!-- ========== GLASS POPUP OVERLAY (for toolbar menus) ========== -->
    <style name="GlassPopupOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="android:colorBackground">@color/glass_bg_dark</item>
        <item name="colorSurface">@color/glass_bg_mid</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <item name="android:textColorPrimary">@color/glass_text_primary</item>
        <item name="android:textColorSecondary">@color/glass_text_secondary</item>
        <item name="popupMenuBackground">@drawable/bg_glass_popup_menu</item>
    </style>
    
    <!-- ========== SUDOKU THEME (Night) ========== -->
    <style name="Base.Theme.Sudoku" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/glass_accent_blue</item>
        <item name="colorSecondary">@color/glass_accent_purple</item>
        <item name="android:colorBackground">@color/glass_bg_dark</item>
    </style>

    <style name="Theme.Sudoku" parent="Base.Theme.Sudoku" />
</resources>